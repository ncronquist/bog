<h1>Tags List</h1>

<div class="row">
  <div class="col-xs-12 col-sm-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |t| %>
          <tr>
            <td><%= link_to t.name, t %></td>
            <td>
              <%= link_to '', edit_tag_path(id: t[:id]), :class => "btn btn-success glyphicon glyphicon-pencil" %>
              <% if t.creatures.length > 0 %>
                <%= link_to '', t, :method => "delete", data: { confirm: "There are #{t.creatures.length} creatures using this tag. Are you sure you want to delete this tag?" }, :class => "btn btn-danger glyphicon glyphicon-remove" %>
              <% else %>
                <%= link_to '', t, :method => "delete", :class => "btn btn-danger glyphicon glyphicon-remove" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
