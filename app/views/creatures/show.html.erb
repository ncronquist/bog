<h1>Show page for a Creature</h1>

<% form_for(:creature, :url => creatures_path("id"), :html => {:method => :delete}) do  %>
  <!-- email: <%# text_field_tag :mail %> -->
  <%= submit_tag "Delete Creature" %>
<% end %>

<table class="tab le">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @creature.name %></td>
      <td><%= @creature.description %></td>
    </tr>
  </tbody>
</table>
